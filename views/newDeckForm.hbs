<div class="card">
  <div class="card-body">
    <h4 class="card-title">Add a new {{type}} deck:</h4>
    <form action="/api/{{type}}" method="post">
      <div>
        <input value="{{type}}" class="d-none" id="deckType">
      </label>
    </div>
      <div class="form-group">
        <label for="deckName">Deck Name</label>
        <input type="deckName" id="deckName" placeholder="Deck name" class="form-control">
      </div>
      <div class="form-group">
        <label for="set">Set</label>
        <input type="set" id="set" placeholder="Which set is this from?" class="form-control">
      </div>
      <button type="submit" id="submitNewDeckForm" class="rounded bg-primary p-2 px-3 text-white">Submit</button>
    </form>
  </div>
</div>
